@model int
@{
    ViewData["Title"] = "Deleting group";
}


<div class="container p-2">
    <div class="row">
        <div class="col-md-12 text-center">

            <h4>Are You sure?</h4>
            <form id="formularz" asp-action="Delete" method="post">
                <input name="tableid" value="@Model" hidden />
                <button type="submit" onclick="disable_button(this)" class="btn btn-danger">Yes, delete!</button>
            </form>
            <br />
            <form asp-action="Delete" method="post">
                <input name="tableid" value="-1" hidden />
                <button type="submit" class="btn btn-outline-dark">No, back to group list</button>
            </form>

        </div>
    </div>
</div>

<script src="~/js/wylacznik.js" asp-append-version="true"></script>



