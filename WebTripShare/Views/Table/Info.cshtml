@model WebTripShare.Models.TableViewModel

    <div class="jumbotron jumbotron-fluid p-1" style="background-color:lightgray">
        <div class="container-fluid">

            <h2 style="text-align:center">@Model.tableInfo.TableName</h2>
            <h3>Group members:</h3>
            <p>
                @foreach (var member in Model.tableInfo.Members)
                {
                    @member.Name
                    <span> </span>
                }
            </p>

        </div>
    </div>

    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <h2>Calculation results:</h2>
                @if (Model.TableResults == null)
                {
                    <p>So far no expense added.</p>
                }
                else
                {
                    @foreach (var line in Model.TableResults)
                    {
                        <p>@line</p>
                    }
                }
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-outline-info" value=""
                        onclick="location.href='@Url.Action("Add", "Expense", new { id = Model.tableInfo.TableInfoId })'">
                    Add new expense
                </button>
                <button type="submit" class="btn btn-outline-info" value=""
                        onclick="location.href='@Url.Action("Details", "Expense", new { id = Model.tableInfo.TableInfoId })'">
                    View details
                </button>
            </div>
        </div>
    </div>