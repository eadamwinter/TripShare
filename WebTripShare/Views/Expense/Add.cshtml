@model TripShare.ExpenseMapper

    <h2>Add a new expense to the database.</h2>
    <form asp-action="Add" method="post" role="form">
        <div class="form-group">
            <label asp-for="TableNumber" class="col-md-6">
                Number of chosen group : 
                    <a asp-controller="Table" asp-action="Info" asp-route-id="@ViewBag.TableNumber">
                        @ViewBag.TableNumber</a></label>
            <div class="col-md-6">
                <input type="hidden" asp-for="TableNumber" class="form-control" value="@ViewBag.TableNumber" />
            </div>
        </div>
        

        <div class="form-group">
            <label asp-for="Name" class="col-md-6"></label>
            <div class="col-md-6">
                <select asp-for="Name" class="form-control">
                    <option>Adam</option>
                    <option>Piotr</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Amount" class="col-md-6"></label>
            <div class="col-md-6">
                <input asp-for="Amount" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="MembersInvolved" class="col-md-6"></label>
            <div class="col-md-6">
                <select asp-for="MembersInvolved" multiple typeof="checkbox">
                    <option value="Adam">Adam</option>
                    <option value="Piotr">Piotr</option>
                    <option value="Heniek">Heniek</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Comment" class="col-md-6"></label>
            <div class="col-md-6">
                <input asp-for="Comment" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="cold-md-offset-2 col-md-6">
                <input type="submit" class="btn btn-success" value="Add expense" />
            </div>
        </div>

    </form>
