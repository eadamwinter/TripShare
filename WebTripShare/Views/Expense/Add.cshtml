@model TripShare.ExpenseMaker

    <h2>Add a new expense to the database.</h2>
    <form asp-action="Add" method="post" role="form">
        <div class="form-group">
            <label asp-for="TableNumber" class="col-md-6"></label>
            <div class="col-md-6">
                <input asp-for="TableNumber" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Name" class="col-md-6"></label>
            <div class="col-md-6">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Amount" class="col-md-6"></label>
            <div class="col-md-6">
                <input asp-for="Amount" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="MembersInvolved" class="col-md-6"></label>
            <div class="col-md-6">
                <input asp-for="MembersInvolved" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Comment" class="col-md-6"></label>
            <div class="col-md-6">
                <input asp-for="Comment" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="cold-md-offset-2 col-md-6">
                <input type="submit" class="btn btn-success" value="Send data" />
            </div>
        </div>

    </form>
