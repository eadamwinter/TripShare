@{ 
    ViewData["Title"] = "Details";
}

@model List<TripShare.Expense>

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                @if (Model == null)
                {
                    <h4 class="text-justify">No expenses added.</h4>
                }
                else
                {
                    <table class="table table-dark table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th class="back-color" scope="col">Name</th>
                                <th class="back-color" scope="col">Amount</th>
                                <th class="back-color" scope="col">Date</th>
                                <th class="back-color" scope="col">Members Involved</th>
                                <th class="back-color" scope="col">Comment</th>
                                <th class="back-color text-center" scope="col">Edit</th>
                                <th class="back-color text-center" scope="col">Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td>@data.Name</td>
                                    <td>@data.Amount</td>
                                    <td>@data.TimeOfExpense</td>
                                    <td>@data.NamesOfMembersInvolved</td>
                                    <td>@data.Comment</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@data.ExpenseId" class="fa fa-wrench"></a>
                                    </td>
                                    <td style="text-align:center">
                                        <a asp-action="Del" asp-route-id="@data.ExpenseId" asp-route-table="@data.TableNumber" class="fa fa-times-circle"></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="p-2 text-center">
                        <button type="submit" class="btn btn-dark" value=""
                                onclick="location.href='@Url.Action("Info", "Table", new { id = Model[0].TableNumber })'">
                            Show results
                        </button>
                    </div>
                }

            </div>
        </div>
    </div>